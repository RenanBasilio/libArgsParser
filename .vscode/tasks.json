{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Make",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "command": "cmake",
            "args": [
                ".."
            ],
            "problemMatcher": []
        },
        {
            "label": "Build (Debug)",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "dependsOn": "Make",
            "command": "cmake",
            "args": [
                "--build",
                "."
            ],
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Build (Release)",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "dependsOn": "Make",
            "command": "cmake",
            "args": [
                "--build" , ".",
                "--config", "Release"
            ],
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Test (Debug)",
            "type": "shell",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "dependsOn": "Build (Debug)",
            "command": "ctest",
            "args": [
                "-C", "Debug"
            ]
        }
    ]
}